<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/editCardMakePhotoFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@+id/editCardChoosePhotoFab" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:text="Some Address"
            android:id="@+id/editCardAddress" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editCardPosition" app:layout_constraintStart_toStartOf="parent"
            android:hint="Address" android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/editCardChoosePhotoFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_menu_gallery"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/colorPrimary"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/editCardSaveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            app:srcCompat="@android:drawable/stat_notify_more"
            android:backgroundTint="#005252"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:text="Elvin Bayramov"
            android:id="@+id/editCardName"
            android:hint="Name" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:text="Some Company"
            android:id="@+id/editCardCompany"
            android:hint="Company name" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editCardName"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:text="Position"
            android:id="@+id/editCardPosition" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editCardCompany" app:layout_constraintStart_toStartOf="parent"
            android:hint="Position" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:text="+512341251"
            android:id="@+id/editCardPhone" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editCardAddress" android:hint="Phone"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:text="email@email.com"
            android:id="@+id/editCardEmail"
            android:hint="Email" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editCardPhone"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textUri|textPersonName"
            android:ems="10"
            android:text="website.org"
            android:id="@+id/editCardWebsite" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editCardEmail" android:hint="Website"/>
    <CheckBox
            android:text="Private?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editCardIsPrivate" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editCardWebsite" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:checked="true"/>
    <EditText
            android:layout_width="342dp"
            android:layout_height="85dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editCardNote" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editCardWebsite" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:hint="Note"/>
</android.support.constraint.ConstraintLayout>